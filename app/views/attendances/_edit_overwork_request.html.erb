<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '残業を申請する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title">【残業申請】</h1>
    </div>
    
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: attendances_update_overwork_request_user_path(@user), local: true, method: :patch) do |f| %>
          <% debugger %>
          <%= render 'shared/error_messages', object: @user %>
          <table class="table table-bordered table-striped table-overwork">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>翌日</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
              </tr>
            </thead>
            
            <tbody>
              <tr>
                <td class="table-overwork"></td>
                <td></td>
                <td>
                  <%= f.text_field :name, class: "form-control" %></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>

            <div class="mordal-footer">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
         
          <% end %>
        </div>
      </div><!-- row -->
    </div><!-- modal-body -->
    
  </div>
</div>