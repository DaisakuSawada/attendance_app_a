<% provide(:button_text, '追加する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title">【残業申請】</h4>
    </div>
     
    <div class="modal-body">
      <%= form_with url: attendances_update_overwork_request_user_path, method: :patch do |f| %>
          <table class="table table-bordered table-striped table-overwork">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>翌日</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
              </tr>
            </thead>
        
            <tbody>
              
              <tr>
                <td class="table-overwork"><%= @attendance.worked_on %></td>
                <td><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
                <%= f.fields_for :attendance do |af| %>
                  <td><%= af.time_field :scheduled_end_time, class: "form-control" %></td>
                <% end %>
                <td><%= check_box_tag :check %></td>
                <td></td>
                <td></td>
              </tr>
              
            </tbody>
          </table>
    </div>
    
    <div class="modal-footer">
      <%= f.submit "残業を申請する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>