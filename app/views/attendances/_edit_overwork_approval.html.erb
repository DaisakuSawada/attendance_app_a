<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title"></h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= form_with(model: @attendance, url: update_overwork_approval_user_attendance_path(@user.id, @attendance.id), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>
            
            <% @users.each do |user| %>
           
            <table class="table table-bordered table-striped table-approval">
              <p>【<%= user.name %>からの残業申請】</p>
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>指定勤務終了時間</th>
                  <th>時間外時間</th>
                  <th>業務処理内容</th>
                  <th>指示者確認㊞</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              
              <% if @user.id == 2 %>
                <% @applications_to_A.each do |day| %>
                  <tbody>
                    <tr>
                      <td><%= l(day.worked_on, format: :short) %></td>
                      <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                      <td><%= l(day.scheduled_end_time, format: :time) %></td>
                      <td><%= format_basic_info(@user.designated_work_end_time) %></td>
                      <td></td>
                      <td><%= day.work_description %></td>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                  </tbody>
                <% end %>
              <% end %>
              
              <% if @user.id == 3 %>
                <% @applications_to_B.each do |day| %>
                  <tbody>
                    <tr>
                      <td><%= day.id %></td>
                      <td><%= day.user_id %></td>
                      <td><%= day.scheduled_end_time %></td>
                      <td></td>
                      <td><%= day.work_description %></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                  </tbody>
                <% end %>
              <% end %>
            
            </table>
         
            <% end %>
            
            <%= f.hidden_field :application_state, {value: 'applying'} %>

            <div class="center">
              <%= f.submit "申請を反映する", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>