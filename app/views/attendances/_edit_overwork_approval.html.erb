<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title"></h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= form_with(model: @user, url: update_overwork_approval_user_attendance_path(@user.id, @attendance.id), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>
              
              <% if @user.id == 2 %>
                <% @users.each do |user| %>
                  <% @applications_to_A.each do |day| %>
                    <table class="table table-bordered table-striped table-approval">
                      <% if user.id == day.user_id %>
                        <p><%= user.name %>からの残業申請</p>
                      <% end %>
                      <% if user.id == day.user_id %>
                        <thead>
                          <tr>
                            <th>日付</th>
                            <th>曜日</th>
                            <th>終了予定時間</th>
                            <th>指定勤務終了時間</th>
                            <th>時間外時間</th>
                            <th>業務処理内容</th>
                            <th>指示者確認㊞</th>
                            <th>変更</th>
                            <th>勤怠を確認する</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%= l(day.worked_on, format: :short) %></td>
                            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                            <td><%= l(day.scheduled_end_time, format: :time) %></td>
                            <td><%= format_basic_info(@user.designated_work_end_time) %></td>
                            <td>
                              <% if day.scheduled_end_time.present? %>
                                <% if day.next_day == true %>
                                  <%= format_basic_info(day.scheduled_end_time).to_f + format_basic_info(@user.designated_work_end_time - 12.hour).to_f %>
                                <% else %>
                                  <%= format_basic_info(day.scheduled_end_time).to_f - format_basic_info(@user.designated_work_end_time).to_f %>
                                <% end %>
                              <% end %>
                            </td>
                            <td><%= day.work_description %></td>
                            <td>
                              <%= fields_for "@applications_to_A[]", day do |af| %>
                                <%= af.select :application_state, Attendance.application_states.keys.to_a, { include_blank: false }, class: "form-control" %>
                              <% end %>
                            </td>
                            <td></td>
                            <td>
                              <%= link_to "確認", check_user_path(day.user_id), class: "btn btn-primary" %>
                            </td>
                          </tr>
                        </tbody>
                      <% end %>
                    </table>
                  <% end %>
                <% end %>
              <% end %>
              
              <% if @user.id == 3 %>
                <% @users.each do |user| %>
                  <% @applications_to_B.each do |day| %>
                    <table class="table table-bordered table-striped table-approval">
                      <% if user.id == day.user_id %>
                        <p><%= user.name %>からの残業申請</p>
                      <% end %>
                      <% if user.id == day.user_id %>
                        <thead>
                          <tr>
                            <th>日付</th>
                            <th>曜日</th>
                            <th>終了予定時間</th>
                            <th>指定勤務終了時間</th>
                            <th>時間外時間</th>
                            <th>業務処理内容</th>
                            <th>指示者確認㊞</th>
                            <th>変更</th>
                            <th>勤怠を確認する</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%= l(day.worked_on, format: :short) %></td>
                            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                            <td><%= l(day.scheduled_end_time, format: :time) %></td>
                            <td><%= format_basic_info(@user.designated_work_end_time) %></td>
                            <td>
                              <% if day.scheduled_end_time.present? %>
                                <% if day.next_day == true %>
                                  <%= format_basic_info(day.scheduled_end_time).to_f + format_basic_info(@user.designated_work_end_time - 12.hour).to_f %>
                                <% else %>
                                  <%= format_basic_info(day.scheduled_end_time).to_f - format_basic_info(@user.designated_work_end_time).to_f %>
                                <% end %>
                              <% end %>
                            </td>
                            <td><%= day.work_description %></td>
                            <td>
                              <%= fields_for "@applications_to_B[]", day do |af| %>
                                <%= af.select :application_state, Attendance.application_states.keys.to_a, { include_blank: false }, class: "form-control" %>
                              <% end %>
                            </td>
                            <td></td>
                            <td>
                              <%= link_to "確認", check_user_path(day.user_id), class: "btn btn-primary" %>
                            </td>
                          </tr>
                        </tbody>
                      <% end %>
                    </table>
                  <% end %>
                <% end %>
              <% end %>

            <div class="center">
              <%= f.submit "申請を反映する", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>