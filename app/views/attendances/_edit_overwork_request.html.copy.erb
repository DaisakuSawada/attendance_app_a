<% provide(:button_text, '追加する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title">【残業申請】</h4>
    </div>
     
    <div class="modal-body">
      <%= form_with(model: @user, url: attendances_update_overwork_request_user_path(@user), local: true, method: :patch) do |f| %>
      
          <table class="table table-bordered table-striped table-overwork">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>翌日</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
              </tr>
            </thead>
        
            <tbody>
              <% @attendances.each do |day| %>
                <%= f.fields_for "attendances[]", day do |attendance| %>
                <tr>
                  <td class="table-overwork"><%= @attendance.worked_on %></td>
                  <td><%= @youbi[@attendance.worked_on.wday] %></td>
                  <td><%= attendance.time_field :scheduled_end_time, class: "form-control" %></td>
                  <td><%= check_box_tag :check %></td>
                  <td><%= attendance.text_field :work_description, class: "form-control" %></td>
                  <td></td>
                </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
    </div>
    
    <div class="modal-footer">
      <%= f.submit "残業を申請する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>